<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombre:"></Label>
        <Entry Text="{Binding Nombre}"></Entry>
        <Label Text="Apellido paterno:"></Label>
        <Entry Text="{Binding ApellidoPaterno}"></Entry>
        <Label Text="Apellido materno:"></Label>
        <Entry Text="{Binding ApellidoMaterno}"></Entry>
        <Label Text="Nombre de usuario:"></Label>
        <Entry Text="{Binding NombreUsuario}"></Entry>
        <Label Text="Contraseña:"></Label>
        <Entry Text="{Binding Contrasenia}"></Entry>
        <Label Text="{Binding DatosEncriptados}" IsVisible="{Binding Send}"></Label>
        <Button Text="Enviar datos" Command="{Binding EncriptaCommand}"/>
    </StackLayout>

</ContentPage>
